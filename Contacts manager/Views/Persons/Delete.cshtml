@model PersonResponse

@{
  ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index">Back to person list</a>
<h2>Delete Person</h2>
<h3>Are you sure to delete?</h3>
<div class="center-box">
  <form asp-controller="Persons" asp-action="Delete" method="post">
    
    <input type="hidden" asp-for="Id"/>

    <div class="form-field flex">
      <div class="w-25">
        <label class="form-label pt" asp-for="PersonName">Person Name</label>
      </div>
      <div class="flex-1">
        <input asp-for="PersonName" class="form-input" disabled="disabled"/>
        <span class="text-red" asp-validation-for="PersonName"></span>
      </div>
    </div>

    <div class="form-field flex">
      <div class="w-25">
        <label class="form-label pt" asp-for="Email">Email</label>
      </div>
      <div class="flex-1">
        <input asp-for="Email" class="form-input" disabled="disabled"/>
        <span class="text-red" asp-validation-for="Email"></span>
      </div>
    </div>

    <div class="form-field flex">
      <div class="w-25">
      </div>
      <div class="flex-1">
        <button class="button button-red-back">Delete</button>
        <div class="text-red" asp-validation-summary="All"></div>
      </div>
    </div>
  </form>
</div>